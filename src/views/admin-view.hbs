{{> menu active="adminpanel" isAdmin=isAdmin}}

<section class="section">
  <div class="box">
    <div class="title">Users</div>
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Scope</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each allUsers}}
          <tr>
            <td>{{email}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{scope}}</td>
            <td>
              <a href="/adminpanel/deleteuser/{{_id}}" class="icon has-text-danger">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <hr>
  <div class="box">
    <div class="title">POIs</div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Owner</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each allPois}}
          <tr>
            <td>{{name}}</td>
            <td>{{category.name}}</td>
            <td>{{latitude}}</td>
            <td>{{longitude}}</td>
            <td>{{userid}}</td>
            <td>
              <a href="/adminpanel/deletepoi/{{_id}}" class="icon has-text-danger">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <hr>
    <div class="box">
    <div class="title">Categories</div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td>{{name}}</td>
            <td>
              <a href="/adminpanel/deletecategory/{{_id}}" class="icon has-text-danger">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{> add-category}}
  </div>
  <hr>
  <div class="box">
    <div class="title">Analytics</div>
    <table class="table">
      <thead>
        <tr>
          <th>Users total</th>
          <th>POIs total</th>
        </tr>
      </thead>
      <tbodu>
        <tr>
          <td>{{allUsers.length}}</td>
          <td>{{allPois.length}}</td>
        </tr>
      </tbodu>
    </table>
  </div>

</section>
