<section class="section">
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Scope</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each allUsers}}
        <tr>
          <td>{{email}}</td>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{scope}}</td>
          <td>
            <a href="/adminpanel/deleteuser/{{_id}}" class="icon has-text-danger" data-tooltip="Delete User">
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
